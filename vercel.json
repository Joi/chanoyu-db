{
  "version": 2,
  "framework": "nextjs",
  "installCommand": "npm install --no-audit --no-fund",
  "buildCommand": "NEXT_DISABLE_LIGHTNINGCSS=1 next build",
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "collection.ito.com" }],
      "destination": "https://chanoyu.ito.com/:path*",
      "statusCode": 308
    },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "dev.collection.ito.com" }],
      "destination": "https://dev.chanoyu.ito.com/:path*",
      "statusCode": 308
    }
  ]
}
